// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"nodeGypDependencies": true,
			"version": "lts",
			"nvmVersion": "latest"
		},
		"ghcr.io/devcontainers-contrib/features/poetry:2": {
			"version": "latest"
		}
	},
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8000
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",
	// "postCreateCommand": "poetry update",
	// Configure tool-specific properties.
	"customizations": {
		"extensionPack": [
			"MohammadBaqer.better-folding",
			"ms-python.vscode-pylance",
			"samuelcolvin.jinjahtml",
			"ms-python.python",
			"ms-python.debugpy",
			"redhat.vscode-commons",
			"medo64.render-crlf",
			"mutantdino.resourcemonitor",
			"charliermarsh.ruff",
			"spmeesseman.vscode-taskexplorer",
			"MarkosTh09.color-picker",
			"DotJoshJohnson.xml",
			"ms-dotnettools.vscode-dotnet-runtime",
			"streetsidesoftware.code-spell-checker-italian",
			"ms-toolsai.vscode-jupyter-cell-tags",
			"yzhang.markdown-all-in-one",
			"ms-toolsai.vscode-jupyter-slideshow",
			"DavidAnson.vscode-markdownlint",
			"ms-python.mypy-type-checker",
			"ionutvmi.path-autocomplete",
			"ms-toolsai.jupyter-renderers",
			"shd101wyy.markdown-preview-enhanced",
			"shardulm94.trailing-spaces",
			"redhat.vscode-yaml",
			"redhat.vscode-xml",
			"meganrogge.template-string-converter",
			"SonarSource.sonarlint-vscode",
			"christian-kohler.npm-intellisense",
			"alefragnani.project-manager",
			"ms-toolsai.jupyter-keymap",
			"ms-toolsai.vscode-jupyter-powertoys",
			"ms-toolsai.jupyter",
			"VisualStudioExptTeam.vscodeintellicode-insiders",
			"VisualStudioExptTeam.vscodeintellicode-completions",
			"VisualStudioExptTeam.intellicode-api-usage-examples",
			"fabiospampinato.vscode-highlight",
			"oderwat.indent-rainboww",
			"Zignd.html-css-class-completionw",
			"GitHub.copilot-chat",
			"GitHub.copilot-labs",
			"codezombiech.gitignore",
			"eamodio.gitlens",
			"GitHub.copilot",
			"naumovs.color-highlight",
			"dotenv.dotenv-vscode",
			"EditorConfig.EditorConfig",
			"tamasfe.even-better-toml",
			"howardzuo.vscode-favorites",
			"mhutchie.git-graph",
			"donjayamanne.githistory",
			"ms-python.black-formatter",
			"formulahendry.code-runner",
			"streetsidesoftware.code-spell-checker"
		]
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}